#include <TroykaDHT.h>
#include <LiquidCrystal.h>
#include <Servo.h>
Servo s1;
LiquidCrystal lcd(6, 7, 8, 9, 10, 11);
DHT dht(4, DHT11);
int pin_foto = A0;
int serv = 2;

void setup() {
  
lcd.begin(16, 2);
s1.attach(serv);
Serial.begin(9600);
dht.begin();
}

void loop() {
dht.read();
int foto = analogRead(pin_foto);
Serial.println(foto);

lcd.clear();
lcd.setCursor(0, 0);
lcd.print("Fotorez:");
lcd.setCursor(0, 1);
lcd.print(foto);
map(value ,0 , 1022 ,0 ,180);

if (foto > 300){
  s1.write(30);
}

  switch(dht.getState()) {
    case DHT_OK:
      Serial.print("Temperature = ");
      Serial.print(dht.getTemperatureC());
      Serial.println(" C \t");
      Serial.print("Temperature = ");
      Serial.print(dht.getTemperatureK());
      Serial.println(" K \t");
      Serial.print("Temperature = ");
      Serial.print(dht.getTemperatureF());
      Serial.println(" F \t");
      Serial.print("Humidity = ");
      Serial.print(dht.getHumidity());
      Serial.println(" %");
      break;
    case DHT_ERROR_CHECKSUM:
      Serial.println("Checksum error");
      break;
    case DHT_ERROR_TIMEOUT:
      Serial.println("Time out error");
      break;
    case DHT_ERROR_NO_REPLY:
      Serial.println("Sensor not connected");
      break;
  }
delay(2000);
}
